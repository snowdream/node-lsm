#!/usr/bin/env node


exports.execSync = function (cmd) {
    let cp = require('child_process');
    let execSync = cp.execSync;

    if (!cmd) {
        log("command should not be null or empty.")
        return;
    }

    let command = cmd;
    if (cmd instanceof Function) {
        command = cmd();
    }

    //log("$ " + command);

    let out = execSync(command);
    if (out) {
        log(out.toString("UTF-8"));
        return out.toString("UTF-8").replace(/[\r\n]+/g, '');;
    }

};

exports.exec = function (cmd) {
    let cp = require('child_process');
    let exec = cp.exec;

    if (!cmd) {
        log("command should not be null or empty.")
        return;
    }

    let command = cmd;
    if (cmd instanceof Function) {
        command = cmd();
    }

    // log("$ " + command);


    let child = exec(command);
    child.stdout.on('data', function (data) {
        log(data);
    });
    child.stderr.on('data', function (data) {
        log(data);
    });
    child.on('error', function (data) {
        log(data);
    });
};

exports.spawnSync = function (cmd) {
    let cp = require('child_process');
    let spawnSync = cp.spawnSync;

    if (!cmd) {
        log("command should not be null or empty.")
        return;
    }

    let command = cmd;
    if (cmd instanceof Function) {
        command = cmd();
    }

    //log("$ " + command);
    //https: //stackoverflow.com/questions/28638008/node-js-how-to-show-stdin-input-with-child-process-exec
    let out = spawnSync("sh", ["-c", command], {
        stdio: "inherit",
        stdin: "inherit"
    })
    if (out) {
        log(out.toString("UTF-8"));
        return out.toString("UTF-8").replace(/[\r\n]+/g, '');;
    }

};

exports.spawn = function (cmd) {
    let cp = require('child_process');
    let spawn = cp.spawn;

    if (!cmd) {
        log("command should not be null or empty.")
        return;
    }

    let command = cmd;
    if (cmd instanceof Function) {
        command = cmd();
    }

    // log("$ " + command);

    //https: //stackoverflow.com/questions/28638008/node-js-how-to-show-stdin-input-with-child-process-exec
    let child = spawn("sh", ["-c", command], {
        stdio: "inherit",
        stdin: "inherit"
    })
    child.stdout.on('data', function (data) {
        log(data);
    });
    child.stderr.on('data', function (data) {
        log(data);
    });
    child.on('error', function (data) {
        log(data);
    });
};

function log(data) {
    if (!data) return;

    if (data instanceof Object) {
        console.log(JSON.stringify(data))
    } else {
        console.log(data)
    }
}